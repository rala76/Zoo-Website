<script type="text/javascript">
	
	function checkForm(form) {
	if(form.username.value == "") {
	alert("empty!");
	form.username.focus();
	return false;
	}
	if(form.password.value == "") {
	alert("empty!");
	form.password.focus();
	return false;
	}
	return true;
	}
</script>
